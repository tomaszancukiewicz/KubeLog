<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.payu.kube.log.ui.tab.SearchBoxView?>
<?import com.payu.kube.log.ui.tab.list.LogListView?>
